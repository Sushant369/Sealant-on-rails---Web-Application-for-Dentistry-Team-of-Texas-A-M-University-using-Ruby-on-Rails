<p style="color: green"><%= notice %></p>
<%= render @event_detail %>
<div class="container mt-5">
  <div class="row">
    <div class="col">
      <%= button_to "Edit this event detail", edit_event_detail_path(@event_detail), method: :get, class: "btn btn-primary" %>
    </div>
    <div class="col">
      <%= button_to "Back to event details", event_details_path, method: :get, class: "btn btn-secondary" %>
    </div>
    <div class="col">
      <%= button_to "Destroy this event detail", @event_detail, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-warning" %>
    </div>
  </div>
</div>

