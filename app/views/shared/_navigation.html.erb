<%= stylesheet_link_tag "navigation", "data-turbo-track": "reload" %>

<nav class="navigation-container">
  <div class="logo">
    <%= image_tag("tamu-school-of-dentistry-logo-black.svg", alt: "School of Dentistry Logo") %>
  </div>
  <ul class="horizontal-navigation">
    <% if logged_in? %>
      <li>
        <%= link_to "Home", root_path, class: "nav-link" %>
      </li>
      <li>
        <%= link_to "Event Details", event_details_path, class: "nav-link" %>
      </li>
      <li>
        <%= link_to "Patients Details", patient_details_path, class: "nav-link" %>
      </li>
      <li>
        <%= link_to "Add Patient", new_patient_detail_path, class: "nav-link" %>
      </li>
      <li class="dropdown">
        <a href="#" class="nav-link">Statistics</a>
        <div class="dropdown-content">
          <%= link_to "Patient", statistics_index_path %>
          <%= link_to "School", statistics_school_path %>
          <%= link_to "Event", statistics_event_path %>
        </div>
      </li>
      <li>
        <%= button_to "Logout", logout_path, method: :delete, class: "logout-button" %>
      </li>
    <% else %>
      <% unless request.path_info == login_path %>
        <li>
          <%= link_to "Login", login_path, class: "login-button" %>
        </li>
      <% end %>
    <% end %>
  </ul>
</nav>